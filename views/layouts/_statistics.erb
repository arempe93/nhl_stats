<div class="container">
	<div class="row">
		<div class="col-md-3" style="border-right: 1px solid #ccc;">
			<%= partial :'layouts/statistic', locals: {number: SkaterStat.count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse, text: 'Stat records' } %>
		</div>
		<div class="col-md-3" style="border-right: 1px solid #ccc;">
			<%= partial :'layouts/statistic', locals: {number: Player.where(player_type: 'S').count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse, text: 'Players' } %>
		</div>
		<div class="col-md-3" style="border-right: 1px solid #ccc;">
			<%= partial :'layouts/statistic', locals: {number: Player.where(player_type: 'G').count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse, text: 'Goalies' } %>
		</div>
		<div class="col-md-3">
			<%= partial :'layouts/statistic', locals: {number: Game.count.to_s.reverse.gsub(/...(?=.)/,'\&,').reverse, text: 'Game stats' } %>
		</div>
	</div>
</div>